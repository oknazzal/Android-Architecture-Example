<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oknazzal.architecture.example.feature.images.presentation">

    <application>

        <activity
            android:name=".list.ImagesListActivity"
            android:exported="false">

            <intent-filter>

                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.oknazzal.images.LIST" />
            </intent-filter>
        </activity>

        <activity
            android:name=".details.ImageDetailsActivity"
            android:exported="false">

            <intent-filter>

                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.oknazzal.images.DETAILS" />
            </intent-filter>
        </activity>
    </application>
</manifest>
